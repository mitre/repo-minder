# ============================================================================
# Repo Minder Configuration
# ============================================================================
# Copy this file to .env and customize for your environment
#
# Configuration priority (highest to lowest):
#   1. CLI flags (--org, --team, etc.)
#   2. Environment variables (REPO_MINDER_ORGANIZATION, etc.)
#   3. .env file (this file)
#   4. Built-in defaults

# ============================================================================
# GitHub Settings
# ============================================================================

# GitHub Organization
# The organization where your repositories are located
# Default: mitre
REPO_MINDER_ORGANIZATION=mitre

# GitHub Team
# The team within the organization to manage
# Default: saf
REPO_MINDER_TEAM=saf

# GitHub Personal Access Token (optional)
# If not set, uses 'gh' CLI authentication
# Default: (uses gh auth)
# REPO_MINDER_GITHUB_TOKEN=ghp_xxxxxxxxxxxxx

# ============================================================================
# Performance Settings
# ============================================================================

# API Rate Limiting Delay
# Delay between API calls in seconds (0.0-5.0)
# Lower = faster but may hit rate limits
# Higher = slower but safer
# Default: 0.5
REPO_MINDER_DELAY=0.5

# Maximum Parallel Workers
# Number of concurrent workers for parallel verification (1-50)
# More workers = faster verification but more API calls
# Default: 20
REPO_MINDER_MAX_WORKERS=20

# ============================================================================
# Path Settings
# ============================================================================

# Backup Directory
# Where to store LICENSE backups before modification
# Can be absolute or relative path
# Default: backups
REPO_MINDER_BACKUP_DIR=backups

# Templates Directory
# Directory containing Jinja2 LICENSE templates
# Can be absolute or relative to script location
# Default: templates
REPO_MINDER_TEMPLATES_DIR=templates

# ============================================================================
# Template Variables
# ============================================================================

# MITRE Case Number
# Approved for Public Release case number
# Default: 18-3678
REPO_MINDER_CASE_NUMBER=18-3678

# Copyright Organization
# Full organization name for copyright notices
# Default: The MITRE Corporation
REPO_MINDER_COPYRIGHT_ORG=The MITRE Corporation

# Copyright Year
# Year for copyright notices (defaults to current year if not set)
# Default: (current year)
# REPO_MINDER_COPYRIGHT_YEAR=2025

# Organization Office/Department
# Office or department name for contact information
# Default: Contracts Management Office
REPO_MINDER_ORG_OFFICE=Contracts Management Office

# Organization Address
# Mailing address for contact information
# Default: 7515 Colshire Drive, McLean, VA 22102-7539
REPO_MINDER_ORG_ADDRESS=7515 Colshire Drive, McLean, VA 22102-7539

# Organization Phone
# Phone number for contact information
# Default: (703) 983-6000
REPO_MINDER_ORG_PHONE=(703) 983-6000

# ============================================================================
# Behavior Defaults
# ============================================================================

# Skip Archived Repositories
# Whether to skip archived repos by default
# Can be overridden with --skip-archived / --no-skip-archived CLI flags
# Default: false
REPO_MINDER_SKIP_ARCHIVED=false

# Skip Forked Repositories
# Whether to skip forks by default (recommended to avoid modifying upstream)
# Default: true
REPO_MINDER_SKIP_FORKS=true

# AI-Assisted Development Disclosure
# Whether to include AI-assisted development disclosure in LICENSE files
# When enabled, adds a paragraph about AI-generated code to the Notice section
# Default: false
REPO_MINDER_AI_ASSISTED=false

# ============================================================================
# Logging
# ============================================================================

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR
# - DEBUG: Show detailed operation logs (very verbose)
# - INFO: Show standard progress messages (recommended)
# - WARNING: Show only warnings and errors
# - ERROR: Show only errors
# Default: INFO
REPO_MINDER_LOG_LEVEL=INFO
